@model Meal
@{
    ViewData["Title"] = "Delete";
}

<form asp-controller="Meal" asp-action="Delete" method="post" class="form">
    <div class="border p-3 mt-4">
        <h1 class="text-primary">Delete Meal</h1>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <br>
         <button type="submit" class="btn btn-danger" style="width:130px">Delete</button>
          <a asp-controller="Meal" asp-action="Index" class="btn btn-dark" style="width:130px">
			Back To List
			</a>
    </div>
    </div>
    </form>
   
    
