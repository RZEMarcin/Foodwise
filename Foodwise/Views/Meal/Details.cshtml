@model Meal

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-primary">Meal Details</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        @if (Model.MealProducts.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Calories</th>
                        <th>Protein</th>
                        <th>Carbohydrates</th>
                        <th>Fat</th>
                        <th>Remove Product</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mealProduct in Model.MealProducts)
                    {
                        <tr>
                            <td>@mealProduct.Product.Name</td>
                            <td>@mealProduct.Product.Calories</td>
                            <td>@mealProduct.Product.Protein</td>
                            <td>@mealProduct.Product.Carbohydrates</td>
                            <td>@mealProduct.Product.Fat</td>
                            <td class="w-75 btn-group" role="group">
                                <a asp-controller="Meal" asp-action="RemoveProducts" asp-route-id="@mealProduct.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i>&nbsp; Remove
                                    </a>
                                </td>
                        </tr>
                    }
                </tbody>
                
            </table>
        }
        else
        {
            <p>No products found for this meal.</p>
        }
        <a asp-controller="TodayMeals" asp-action="Index" class="btn btn-primary">Back to TodayMeals</a>
        <a asp-controller="Meal" asp-action="Index" class="btn btn-dark">Back to Meal History</a>
    </div>
</div>