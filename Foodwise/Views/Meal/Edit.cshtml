@model Meal
@{
    ViewData["Title"] = "Edit";
}

<form asp-controller="Meal" asp-action="Edit" method="post" class="form">
    <div class="border p-3 mt-4">
        <h1 class="text-primary">Edit Meal</h1>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <br>

         <button type="submit" class="btn btn-primary" style="width:130px">Edit</button>

         <a asp-controller="Meal" asp-action="Index" class="btn btn-dark" style="width:130px">
			Back To List
			</a>

    </div>
    </div>
    </form>
   
    
