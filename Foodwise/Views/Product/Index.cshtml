@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"> </i> &nbsp; Add a New Product
            </a>
            <br><br/>
            <br><br/>
        </div>
    </div>
   
   
   

<table class="table table-borered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Product Name
            </th>
            <th>
                 Kcal
            </th>
            <th>
                Protein
            </th>
            <th>
                Carbohydrates
            </th>
            <th>
                Fat
            </th>
            <th>
                Weight
            </th>
            
            
            <th></th>
            <th></th>

        </tr>
        </thead>
        <tbody>
        @foreach(var obj in Model)
            {
                <tr>
                    <td width="5%">
                        @obj.Id
                    </td>
                    <td width="20%">
                        @obj.Name

                    </td>
                    <td width="10%">
                        @obj.Calories kcal
                    </td>
                    <td width="10%">
                        @obj.Protein g
                    </td>
                    <td width="5%">
                        @obj.Carbohydrates g
                    </td>
                    <td width="10%">
                        @obj.Fat g
                    </td>
                    <td width="10%">
                        @obj.Weight g
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>&nbsp; Edit

                                </a>
                                <div class="w-75 btn-group" role="group">
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i>&nbsp; Delete
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>

            }
            </tbody>
            </table>
            </div>